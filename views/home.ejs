<!DOCTYPE html>   <!-- #paste bootstrap basic template in get started page -->
<html lang="en">
  <head>

    <% include partials/head.ejs %>
    <!-- <link href="css/bootstrap.min.css" rel="stylesheet"> -->

  </head>
  <body>

     <!-- #once finished nav setting, add this to show in the page, call partials with include -->
     <% include partials/header.ejs %>

    <!-- #below after styling -->
   <div id="hero-image">
     <h1 id="hero-title"><%= title %></h1>
   </div>

    <!-- #after styling add some more styling -->
   <div id="posters-wrapper" class="content-padding" clear-fix>
     <!-- #delete hello world and create movies each method after defined Movies var-->
     <% for (var i = 0; i < movies.length; i++) { %>
        <div class ="poster">
          <img src="/images/<%= movies[i].poster %>" class="img-responsive">   <!--#this one automatically search public because created var path and app.use(express.static(path.join(__dirname, 'public'))); -->
          <div class="poster-info-overlay">
            <h3><%= movies[i].title %></h3>
            <h4>View more <i class="fa-fa-arrow-right"></i></h4>  <!--#style line123, poster themselves' positions are relative so overlay follow-->
          </div>
        </div>
     <% } %>

   </div>


     <% include partials/scripts.ejs %>
  </body>
</html>
